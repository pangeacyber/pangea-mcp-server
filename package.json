{
  "name": "@pangeacyber/mcp-server",
  "version": "0.0.0-semantic-release",
  "description": "A Model Context Protocol (MCP) server that provides integration with Pangea APIs",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "engines": {
    "node": ">=24.11.1"
  },
  "files": [
    "dist",
    "LICENSE.txt",
    "README.md"
  ],
  "bin": {
    "mcp-server": "dist/index.mjs"
  },
  "scripts": {
    "build": "tsdown",
    "start": "tsx src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run -s build"
  },
  "packageManager": "pnpm@10.21.0",
  "dependencies": {
    "@clack/prompts": "0.11.0",
    "@modelcontextprotocol/sdk": "1.21.1",
    "@trpc/server": "11.7.1",
    "express": "5.1.0",
    "fastmcp": "3.22.0",
    "pangea-node-sdk": "5.6.0",
    "trpc-cli": "0.12.0",
    "zod": "3.25.76"
  },
  "optionalDependencies": {
    "@biomejs/cli-linux-x64": "2.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@containerbase/semantic-release-pnpm": "1.3.5",
    "@kenan/biome-config": "1.0.6",
    "@standard-schema/spec": "1.0.0",
    "@tsconfig/node24": "24.0.1",
    "@types/express": "5.0.5",
    "@types/node": "24.10.1",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "lefthook": "2.0.4",
    "semantic-release": "25.0.2",
    "tsdown": "0.16.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  }
}
