{
  "name": "@pangeacyber/mcp-server",
  "version": "0.3.0",
  "description": "A Model Context Protocol (MCP) server that provides integration with Pangea APIs",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "engines": {
    "node": ">=22.21.0"
  },
  "files": [
    "dist",
    "LICENSE.txt",
    "README.md"
  ],
  "bin": {
    "mcp-server": "dist/index.mjs"
  },
  "scripts": {
    "build": "tsdown",
    "start": "tsx src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run -s build"
  },
  "workspaces": [
    "examples/frameworkless",
    "examples/langchain",
    "."
  ],
  "dependencies": {
    "@clack/prompts": "0.11.0",
    "@modelcontextprotocol/sdk": "1.20.2",
    "@trpc/server": "11.6.0",
    "express": "5.1.0",
    "fastmcp": "3.21.0",
    "pangea-node-sdk": "5.6.0",
    "trpc-cli": "0.12.0",
    "zod": "3.25.76"
  },
  "optionalDependencies": {
    "@biomejs/cli-linux-x64": "2.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@kenan/biome-config": "1.0.5",
    "@standard-schema/spec": "1.0.0",
    "@tsconfig/node22": "22.0.2",
    "@types/express": "5.0.4",
    "@types/node": "22.18.12",
    "lefthook": "2.0.1",
    "tsdown": "0.15.9",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  }
}
