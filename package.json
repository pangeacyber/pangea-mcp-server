{
  "name": "@pangeacyber/mcp-server",
  "version": "0.1.1",
  "description": "A Model Context Protocol (MCP) server that provides integration with Pangea APIs",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "engines": {
    "node": ">=22.15.0"
  },
  "files": ["dist", "LICENSE.txt", "README.md"],
  "bin": {
    "mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run -s build"
  },
  "workspaces": ["examples/frameworkless", "examples/langchain", "."],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.11.0",
    "pangea-node-sdk": "5.1.0",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tsconfig/node22": "22.0.1",
    "@types/node": "22.15.17",
    "lefthook": "1.11.12",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "ultracite": "4.2.4"
  }
}
